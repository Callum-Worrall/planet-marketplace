<nav class="navbar navbar-expand-lg navbar-light">
  <a> <%= link_to "Planet Marketplace", root_path, class: "navbar-brand" %> </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <%# Categories - Dropdown Menu %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories</a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Terrain Type</a>
          <div class="dropdown-divider"> </div>
          <a class="dropdown-item" href="#">Size Class</a>
        </div>
      </li>

      <%# Search - Text Input %>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </ul>

    <%# New Listing - Button %>
    <form class="form-inline my-2 my-lg-0">
      <%= link_to "New Listing", new_listing_path, class: "btn btn-primary" %>
    </form>


    <form class="form-inline my-2 my-lg-0">

    <%if(user_signed_in? && Profile.find_by(user_id: current_user) != nil)%>
      <%# Logged in %>
      <%if(@has_credits)%>
        <h5 class="navbar">Credits: <%= Profile.find_by(user_id: current_user).credits.to_i %></h5>
      <%else%>
        <h5 class="navbar">Credits: 0</h5>
      <%end%>
      <%= link_to Profile.find_by(user_id: current_user).username, view_profile_path(current_user), class: "btn btn-outline-info" %>
      <%= link_to "Logout", destroy_user_session_path, method:"DELETE", class: "btn btn-outline-warning" %>
    <%else%>
      <%# Not Logged in %>
      <%if(user_signed_in?) %>
        <%= link_to "Login", new_profile_path, class: "btn btn-outline-warning" %>
      <%else%>
        <%= link_to "Login", new_user_session_path, class: "btn btn-outline-warning" %>
      <%end%>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-warning" %>
    <%end%>
    </form>

  </div>
