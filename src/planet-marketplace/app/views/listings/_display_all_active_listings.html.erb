<h3>Listings</h3>

<div class="card card-body">
<table class="table">
  <thead>
    <tr>
      <th><h6>Title</h6></th>
      <th><h6>Seller</h6></th>
      <th><h6>Description</h6></th>
      <th><h6>Planets</h6></th>
      <th><h6>Price</h6></th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @listings.each do |listing| %>
      <% if(listing.sold != true) %>
        <tr>        
          <%# Details %>
          <td><h6><%= link_to listing.title, view_listing_path(listing) %></h6></td>
          <td><h6><%= link_to Profile.find_by(user_id: listing.seller_id).username, view_profile_path(Profile.find_by(user_id: listing.seller_id)) %></h6></td>
          <td><p><%= listing.description %><p></td>
          <td><h6> <%= Planet.find_by(id: listing.planet_id).name %></h6></td>
          <td><p><%= listing.price.to_i %><p></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>