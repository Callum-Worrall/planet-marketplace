<%if(@is_user == true)%>
  <h2>Your Profile</h2>
  <p><%= link_to "Edit Profile", edit_profile_path(@profile.id) %> - <%= link_to 'Delete Account', user_registration_path, method: :delete if user_signed_in? %> </p>
  <h3>Username: <%= @profile.username %></h3>
<%else%>
  <h2><%= @profile.username %>'s Profile</h2>
<%end%>

<%= image_tag @profile.picture if @profile.picture.attached? %>
<h3>Full Name: <%= @profile.name %></h3>
<h3>Bio</h3>
<p><%= @profile.bio %></p>
<br>

<%if(@is_user == true)%>
  <h3>Your Planets</h3>
  <%= render 'manipulate_planets', user: current_user, planets: @planets %>
  <br>
  <br>
  <h3>Your Current Listings</h3>
  <%= render 'manipulate_listings', user: current_user, listings: @listings %>
  <br>
  <br>
  <h3>Your Past Listings</h3>
  <%= render 'manipulate_past_listings', user: current_user, listings: @listings %>
  
<%else%>
  <h3>Owned Planets</h3>
  <%= render 'display_planets', user: current_user, planets: @planets %>
  <br>
  <br>
  <h3>Current Listings</h3>
  <%= render 'display_listings', user: current_user, listings: @listings %>
  <br>
  <br>
  <h3>Past Listings</h3>
  <%= render 'display_past_listings', user: current_user, listings: @listings %>
  
<%end%>