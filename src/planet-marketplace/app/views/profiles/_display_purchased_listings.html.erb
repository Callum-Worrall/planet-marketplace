<div class="card card-body">
<table class="table">
  <thead>
    <tr>
      <th><h6>Title</h6></th>
      <th><h6>Seller</h6></th>
      <th><h6>Description</h6></th>
      <th><h6>Planets</h6></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @listings.each do |listing| %>
      <% if(listing.sold == true) %>
        <% if(listing.buyer_id == @profile.user_id) %>
          <tr>        
            <%# Details %>
            <td><h6><%= link_to listing.title, view_listing_path(listing.id) %></h6></td>
            <%Profile.where(user_id: listing.seller_id).each do |profile| %>
              <td><h6><%= link_to profile.username, view_profile_path(profile.id) %></h6></td>
            <%end%>
            <td><p><%= listing.description %><p></td>
            <td>
            <%Planet.where(id: listing.planet_id).each do |planet| %>
              <h6><%=planet.name%> </h6>
            <%end%>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>