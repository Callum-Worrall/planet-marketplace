<div class="card card-body">
<table class="table">
  <thead>
    <tr>
      <th><h6>Title</h6></th>
      <th><h6>Description</h6></th>
      <th><h6>Planets</h6></th>
      <th><h6>Price</h6></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @listings.each do |listing| %>
      <% if(listing.seller_id == @profile.user_id && listing.sold == false) %>
        <tr>        
          <%# Details %>
          <td><h6><%= link_to listing.title, view_listing_path(listing.id) %></h6></td>
          <td><p><%= listing.description %><p></td>
          <td><h6> <%= Planet.find_by(id: listing.planet_id).name %></h6></td>
          <td><p><%= listing.price.to_i %><p></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>